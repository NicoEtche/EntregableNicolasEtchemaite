<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e8fce4ec"
    tools:context=".FragmentDetalles">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:id="@+id/card_detalle"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:scaleType="centerCrop"
    android:id="@+id/image_detalle" />

</android.support.v7.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/card_detalle"
    android:orientation="vertical"
    android:background="@drawable/shape_ingredientes"
    android:padding="5dp"
    android:layout_margin="5dp">
    <TextView
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_detalle"
        android:id="@+id/text_view_title_detalle"
        android:textSize="27dp"
        android:text="TITLE"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/text_view_ingredientes"
        android:layout_toRightOf="@id/image_detalle"
        android:layout_below="@id/text_view_title_detalle"
        android:textSize="15dp"
        android:text="ingredientes"/>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_detalle"
        android:text="preparacion"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/shape_preparacion"
        android:id="@+id/text_view_preparacion"/>



</RelativeLayout>
